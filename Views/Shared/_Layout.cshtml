    @Scripts.Render("~/bundles/modernizr")


</head>

<body background="~/Static/cool-cartoon-style-red-car-on-dark-city-background-vector-18013096.jpg" style="background-color:rgba(255,0,0,0.025); background-repeat:no-repeat;background-size:cover;">
