    <div id="wrapper">
        <div class="overlay"></div>

        <!-- Sidebar -->
        <nav class="navbar navbar-inverse navbar-fixed-top" id="sidebar-wrapper" role="navigation">
            <ul class="nav sidebar-nav">
                <li class="sidebar-brand">
                    <a href="#">
                        JJAuto's
                    </a>
                </li>
                <li>
                    @Html.ActionLink("My Profile", "ViewProfile", "Home")
                </li>
                <li>
                    @Html.ActionLink("Home", "Index", "Home")
                </li>
                <li>
                    @Html.ActionLink("My History", "MyHistory", "Home")
                </li>
                <li>
                    @Html.ActionLink("Book", "CreateQoute", "Repair")
                </li>
                <li>
                    @Html.ActionLink("Admin", "Index", "Admin")
                </li>

                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Log Out <span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        <li class="dropdown-header">@Html.Partial("_LoginPartial")</li>

